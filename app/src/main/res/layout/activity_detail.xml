<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_profile"
    android:padding="10dp"
    tools:context=".activities.DetailActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/btVerInformes"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/btVerInformes"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_detalles"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DETALLES"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="26dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SISTEMA:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">

                    <TextView
                        android:id="@+id/sistema_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Ingrese Sistema"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="@color/colorGris"
                        android:textSize="22sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESCRIPCIÓN:"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">

                    <TextView
                        android:id="@+id/descripcion_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingrese Descripción"
                        android:textColor="@color/colorGris"
                        android:gravity="center"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        android:textSize="22sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOTIVO:"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">

                    <TextView
                        android:id="@+id/motivo_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingrese Motivo"
                        android:textColor="@color/colorGris"
                        android:gravity="center"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="22sp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N° DE OT"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">

                    <TextView
                        android:id="@+id/ot_des"
                        android:padding="12dp"
                        android:textSize="22sp"
                        android:text="Ingrese N°de OT"
                        android:inputType="text"
                        android:textColor="@color/colorGris"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="HORÓMETRO:" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">

                    <TextView
                        android:id="@+id/horometro_des"
                        android:text="Ingrese Horometro"
                        android:inputType="numberDecimal"
                        android:gravity="center"
                        android:textColor="@color/colorGris"
                        android:padding="12dp"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVENTO:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">

                    <TextView
                        android:id="@+id/evento_des"
                        android:text="Ingrese Evento"
                        android:textColor="@color/colorGris"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="FECHA:" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">

                    <TextView
                        android:id="@+id/fecha_des"
                        android:text="Ingrese Fecha"
                        android:textColor="@color/colorGris"
                        android:inputType="date"
                        android:padding="12dp"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="OBSERVACIÓN:" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">

                    <TextView
                        android:id="@+id/observacion_des"
                        android:text="Ingrese Observacion"
                        android:textColor="@color/colorGris"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="22sp"
                        android:maxLines="2"
                        android:gravity="center"
                        android:maxLength="200"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>